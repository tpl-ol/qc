{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,

    "removeComments": true,
    "preserveConstEnums": true,

    "outDir": "lib"
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
